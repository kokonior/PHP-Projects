            if($taruhanBola % 2 == 0 ){
                $tebakanBot = "genap";
            }else{
                $tebakanBot = "ganjil";
            }
            
            //main function
            if($tebakanUser == $tebakanBot){

                //update when user win
                $BolaBot  -= $taruhanUser;
