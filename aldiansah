            //Get Taruhan User
            echo "Masukan Taruhan 1 - 10         : ";
            $taruhanUser = trim(fgets(STDIN));
            echo "\n";

            //Get Rand number for bot
            $BolaKelereng = rand(1,$BolaBot);
            
